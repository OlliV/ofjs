{
  "name": "ofjs",
  "version": "0.1.0",
  "description": "OpenFlow Controller written in node.js",
  "author": "Olli Vanhoja <olli.vanhoja@cs.helsinki.fi>",
  "main": "./lib/index",
  "scripts": {
    "lint": "./node_modules/eslint/bin/eslint.js ---ext .js lib",
    "start": "node --stack-size=524288 lib/index.js"
  },
  "devDependencies": {
    "eslint": "3.7.1",
    "eslint-config-standard": "6.2.0",
    "eslint-plugin-standard": "2.0.1",
    "eslint-plugin-promise": "3.0.0",
    "vows": "0.8.1"
  },
  "eslintConfig": {
    "extends": "standard",
    "plugins": [
      "promise"
    ],
    "rules": {
      "comma-dangle": [1, "always-multiline"],
      "yoda": 0,
      "semi": [ 2, "always" ],
      "no-unused-vars": 2,
      "no-extra-semi": 2,
      "semi-spacing": [2, { "before": false, "after": true }],
      "no-shadow": [2, {"builtinGlobals": true, "hoist": "functions"}]
    }
  },
  "dependencies": {
    "async-to-gen": "1.1.4",
    "mac-address": "0.3.0",
    "promise-redis": "0.0.5",
    "segfault-handler": "1.0.0"
  }
}
