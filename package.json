{
  "name": "ofjs",
  "version": "0.1.0",
  "description": "OpenFlow Controller written in node.js",
  "author": "Olli Vanhoja <olli.vanhoja@cs.helsinki.fi>",
  "main": "./src/index",
  "scripts": {
    "lint": "./node_modules/eslint/bin/eslint.js ---ext .js src",
    "start": "node --stack-size=524288 src/index.js"
  },
  "devDependencies": {
    "eslint": "2.10.2",
    "babel-eslint": "6.0.4",
    "eslint-config-standard": "5.3.1",
    "eslint-plugin-standard": "1.3.2",
    "eslint-plugin-promise": "1.1.0",
    "node-int64": "^0.4.0",
    "vows": "^0.8.1"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "comma-dangle": "always-multiline",
      "yoda": 0,
      "semi": [
        2,
        "always"
      ],
      "no-unused-vars": 2,
      "no-extra-semi": 2
    }
  },
  "dependencies": {
    "async-to-gen": "^1.1.4",
    "mac-address": "0.3.0",
    "promise-redis": "0.0.5",
    "segfault-handler": "1.0.0"
  }
}
